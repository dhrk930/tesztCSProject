<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mathPage"
    android:background="@drawable/android_background">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Math: Unit 2"
        android:drawableBottom="@drawable/baseline_add_24"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:fontFamily="@font/asap"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="140dp"
        android:layout_marginRight="70dp"
        android:text="In this test, you will:\n\n1. Determine the coordinates of the midpoint of a line segment.\n2. Determine the coordinates of the endpoint of a line segment.\n3. Determine the length of a line segment formed by two points.\n4. Determine the equation of a circle with its radius.\n5. Determine the radius of a circle with its equation.\n6. Determine if a point resides inside or outside a circle (The circle's equation is given).\n7. Determine the equation of a circle given the right side of the equation and the location of its center."
        android:textSize="20dp"
        android:textStyle="italic"
        android:fontFamily="@font/asap"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:layout_centerHorizontal="true"
        android:text="Proceed"
        android:fontFamily="@font/asap"
        android:textAllCaps="false"
        android:background="@drawable/new_button_design"/>

</RelativeLayout>